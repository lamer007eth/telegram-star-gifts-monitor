# =========================
# Telegram API credentials (user session)
# Get here: https://my.telegram.org
# =========================
API_ID=1234567
API_HASH=your_api_hash_here

# Session name (creates local <SESSION_NAME>.session if needed)
SESSION_NAME=account

# =========================
# Bot tokens (for sending notifications)
# Comma-separated list (optional: you can use 1 token)
# =========================
BOT_TOKENS=123:ABC...,456:DEF...

# =========================
# Where to send alerts
# NOTIFY_CHAT_ID - main channel/chat for new gifts + updates
# NOTIFY_UPGRADES_CHAT_ID - optional separate channel for upgrades
# =========================
NOTIFY_CHAT_ID=-1001234567890
NOTIFY_UPGRADES_CHAT_ID=

# =========================
# Monitoring settings
# =========================
CHECK_INTERVAL=1
CHECK_UPGRADES_PER_CYCLE=2
DATA_SAVER_DELAY=2

# Delays (rate-limit friendly)
NOTIFY_AFTER_STICKER_DELAY=1
NOTIFY_AFTER_TEXT_DELAY=2

# Timezone for pretty timestamps (e.g. UTC, Europe/Moscow)
TIMEZONE=UTC